<!DOCTYPE html>
<html>
<head>
  <title>pfala.ch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'picasso/picasso', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="row">
    <%= render "partials/navbar"%>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= render "partials/navigation"%>
    </div>
    <div class="col-md-10">
      <% if flash[:notice] %>
          <div class="alert alert-<% if flash[:status] == 'fail' %>danger
              <%else if flash[:status] == 'warning'%>warning<% else %>success<%end end%>
                  >"><%= flash[:notice] %></div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>